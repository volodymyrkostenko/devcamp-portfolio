<p id="notice"><%= notice %></p>
<p><%=link_to "Create New Item", new_portfolio_path %></p>
<% @rails_portfolio_items.each do |portfolio| %>
	<p><%=link_to portfolio.title, portfolio_show_path(portfolio) %></p>
	<p><%=portfolio.subtitle%></p>
	<p><%=portfolio.body%></p>
	<%= image_tag portfolio.thumb_image unless portfolio.main_image.nil?%>
	<%=link_to "Edit", edit_portfolio_path(portfolio) %>
	<%=link_to "delete", portfolio_path(portfolio), method: :delete, data: {confirm: "Are you sure?"} %>

	<hr>

<%end%>