<%= form_with(model: portfolio , local: true) do |form| %>
  <div class="row">
    <div class ="col-md-6">

      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control"%>
      </div>
       <div class="form-group">
          <%= form.label :subtitle %>
          <%= form.text_field :subtitle, class: "form-control" %>
        </div>

       
    </div>

    <div class ="col-md-6">
      
       <div class="form-group">
          <%= form.label :body %>
          <%= form.text_area :body, class: "form-control" %>
        </div>
    </div>

  </div>
  
  <h2>Technologies Used</h2>
  <%=form.fields_for :technologies do |t| %>
  <div class="form-group">
    <%= t.label :name%>
    <%= t.text_field :name, class: "form-control"%>
  </div>

<%end%>
  

  <div class="form-group">
    <%= form.submit "Save Portfolio Item", class: "btn btn-primary btn-block"  %>
  </div>
<% end %> 