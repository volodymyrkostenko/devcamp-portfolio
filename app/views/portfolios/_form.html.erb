 <%= form_with(model: portfolio , local: true) do |f| %>

  <%portfolio.errors.full_messages.each do |error|%>
     <%=alert_generation(error)%>
  <%end%>
  <div class="row">
    <div class ="col-md-6">

      <div class="form-group">
        <%= f.text_field :title, class: "form-control", placeholder: "Title"%>
      </div>
       <div class="form-group">
          <%= f.label :subtitle %>
          <%= f.text_field :subtitle, class: "form-control", placeholder: "Subtitle" %>
        </div>
        <div class="form-group">
          <label class="btn btn-primary">
            Upload thumb image file<%= f.file_field :thumb_image, style: 'display: none'  %>

         
        </div>
        <div class="form-group">
          <label class="btn btn-primary">
            Upload main image file<%= f.file_field :main_image, style: 'display: none'  %>
          </label>
          
        </div>

    
    </div>

    <div class ="col-md-6"> 
      
       <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: "form-control", row:  13, placeholder: "Body" %>
        </div>
    </div>

  </div>
  
  <h2>Technologies Used</h2>
  <%=f.fields_for :technologies do |t| %>
  <div class="form-group">
    <%= render 'technology_fields', :f => t %>  
  </div>
  <%end%>
    <div class='links'>
      <%= link_to_add_association f, :technologies do%>

        <i class="fa fa-plus-square">Add tecnology</i> 
        
      <%end%>

    </div>

 
    
  <div class="form-group">
     <%= f.submit "Save Portfolio Item", class: "btn btn-primary btn-block"  %>
  </div>
 
<% end %> 