<p><%=link_to "Back", portfolios_path %></p>

<h1>Create a new Portfolio item</h1>
<%= form_with(model: @portfolio_item, local: true) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title%>
  </div>
 <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  <ul>
    <%=form.fields_for :technologies do |t| %>
    <li>
      <%= t.label :name%>
      <%= t.text_field :name%>

    </li>
  
    <%end%>
  </ul>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
