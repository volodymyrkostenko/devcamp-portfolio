<div class="blog-post">
    
    <h3 class="blog-post-title"><%= link_to blog.title.upcase , blog  %></h3>
     <p class="blog-post-meta">Published <%=distance_of_time_in_words(blog.created_at, Time.now)%> ago</p>
    
    <p><%= blog.body %></p> 
    <%= link_to blog.status,   toggle_status_blog_path(blog) , class: "btn btn-outline-primary" if logged_in?(:site_admin)%>
    
    <%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-outline-primary" if logged_in?(:site_admin)  %>
    <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger"  if logged_in?(:site_admin) %>
   


</div>



