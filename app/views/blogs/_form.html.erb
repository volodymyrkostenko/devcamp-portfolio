
<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <%blog.errors.full_messages.each do |error|%>
     <%=alert_generation(error)%>
    <%end%>
  <% end %>

  <div class="form-groups">
    <%= form.text_field :title  , id: :blog_title, class: "form-control", placeholder: 'Title' %>
  </div>


  <div class="form-groups">
    <%= form.label :topic_id %>
    <%= form.collection_select(:topic_id, Topic.all, :id, :title,  

                                                          {
                                                            
                                                            include_blank: true
                                                          },

                                                            class: "form-control") %>
  </div>


  <div class="form-group">
    <%= form.radio_button :status, 'draft'%>
    <%= form.label :status, 'Draft'%>
    <%= form.radio_button :status, 'published'%>
    <%= form.label :status, 'Published'%>
  </div>

  <div class="form-groups">
    <%= form.text_area :body, id: :blog_body, size: "60x13/home/vova/Downloads/devcamp-portfolio-final-changes/app/helpers/blogs_helper.rb
", class: "form-control", placeholder: "Body" %>
  </div>

 


  <div class="actions">
    <%= form.submit "Edit", class: "btn btn-primary" %>
    <%= link_to 'Back', blogs_path , class: "btn btn-seconadary"%>
  </div>
<% end %>


